<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login.SignUpPage"
             Title="Sign Up">
    <StackLayout Padding="20" Spacing="15">
        <Grid Padding="20" ColumnDefinitions="*,300" RowSpacing="15">
            <VerticalStackLayout Grid.Column="0" Spacing="15">
                <Entry x:Name="FirstNameEntry" Placeholder="First Name" WidthRequest="500" HorizontalOptions="Start" />
                <Entry x:Name="LastNameEntry" Placeholder="Last Name" WidthRequest="500" HorizontalOptions="Start" />
                <Entry x:Name="UsernameEntry" Placeholder="Username" WidthRequest="500" HorizontalOptions="Start" />
                <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" WidthRequest="500" HorizontalOptions="Start" />
                <Button Text="Create Account" Clicked="OnCreateAccountClicked" WidthRequest="200" HorizontalOptions="Center" />
            </VerticalStackLayout>

            <Image Source="biblio.png" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Start" />
        </Grid>

        <Label x:Name="MessageLabel" TextColor="Red" HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>
